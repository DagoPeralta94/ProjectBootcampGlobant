<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivPlayHome"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:translationZ="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivPortadaFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_baseline_play_arrow_24" />

    <ImageView
        android:id="@+id/ivPortadaFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/portadaStrangerFragment" />

    <ImageView
        android:id="@+id/ivPortadaHomeMovie"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/ivPortadaFragment"
        app:layout_constraintBottom_toBottomOf="@id/ivPortadaFragment"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        tools:src="@drawable/portadaStranger" />

</androidx.constraintlayout.widget.ConstraintLayout>